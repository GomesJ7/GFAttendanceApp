<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="414dp"
        android:layout_height="736dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/wallpaper7prof"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="102dp"
            android:gravity="center_vertical"
            android:text="Alexandre DELGADO"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/TextDate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="290dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="@string/_03_06"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck" />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            tools:ignore="TextSizeCheck">

            <TextView
                android:id="@+id/TextTime2"
                android:layout_width="46dp"
                android:layout_height="20dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:inputType="time"
                android:text="13:00"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText,TextSizeCheck,TextViewEdits,TouchTargetSizeCheck,TextContrastCheck" />

            <TextView
                android:id="@+id/TextTime3"
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:text="à"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck,TextSizeCheck,TextViewEdits,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/TextTime1"
                android:layout_width="46dp"
                android:layout_height="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:inputType="time"
                android:text="14:00"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="HardcodedText,TextSizeCheck,TextViewEdits,TouchTargetSizeCheck,DuplicateSpeakableTextCheck,TextContrastCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="30dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            tools:ignore="TextSizeCheck">

            <TextView
                android:id="@+id/matiere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Matière"
                android:textColor="@color/bleuCiel"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <TextView
                android:id="@+id/textSalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="Salle"
                android:textColor="@color/bleuCiel"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck" />

            <TextView
                android:id="@+id/salle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="num"
                android:textColor="@color/bleuCiel"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="30dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            tools:ignore="TextSizeCheck">

            <TextView
                android:id="@+id/intituleCours"
                android:layout_width="170dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:text="Intitulé du cours"
                android:textColor="@color/bleuCiel"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

            <TextView
                android:id="@+id/formation"
                android:layout_width="37dp"
                android:layout_height="25dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="Formation"
                android:textColor="@color/bleuCiel"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

            <TextView
                android:id="@+id/specialite"
                android:layout_width="37dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="0dp"
                android:text="Spécialité"
                android:textColor="@color/bleuCiel"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

            <TextView
                android:id="@+id/option"
                android:layout_width="37dp"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="0dp"
                android:text="Option"
                android:textColor="@color/bleuCiel"
                android:textSize="20sp"
                tools:ignore="DuplicateIds,HardcodedText,RtlHardcoded,SpUsage,TextSizeCheck" />

        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="292dp"
            android:layout_height="40dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/button_validation"
            android:gravity="center"
            android:text="COMMENCER LE COURS"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="347dp"
            android:layout_height="270dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />

        </LinearLayout>

        <Button
            android:id="@+id/TextTime"
            android:layout_width="275dp"
            android:layout_height="30dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_validation2"
            android:gravity="center_vertical"
            android:text="      FIN DE COURS"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="LabelFor,TextSizeCheck" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>